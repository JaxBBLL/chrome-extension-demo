{
  "name": "爱采购登录工具",
  "description": "Build an Extension!",
  "version": "0.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_icon": {
      "16": "images/logo.png",
      "24": "images/logo.png",
      "32": "images/logo.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "script/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["script/components/Message.js", "script/content.js"],
      "css": ["style/content.css"]
    }
  ],
  "permissions": ["notifications", "tabs", "storage", "cookies"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
